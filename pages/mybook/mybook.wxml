<wxs src="../../utils/analysis-time.wxs" module="analysisTime"></wxs>

<view class="nav">
	<view class="content">
		<view class="header">
			<view bind:tap="$onClickIsShow" data-type="isSuccessInfo">----------预订成功----------</view>
		</view>
		<view class="details" wx:if="{{isSuccessInfo}}">
			<block class="block-details" wx:for="{{successInfo}}" wx:key="index">
				<view class="indexId">{{index+1}}</view>
				<view>资源名称：{{item.name}}</view>
				<view>日期：{{item.date}}</view>
				<view>时间：{{analysisTime.handaltime(item.time)}}</view>
				<view class="cancelBtn" bindtap="cancelTap" data-id="{{item.objectId}}">退订</view>
			</block>
		</view>
	</view>


	<view class="content">
		<view class="header">
			<view bind:tap="$onClickIsShow" data-type="isExaminingInfo">----------正在审核----------</view>
		</view>
		<view class="details" wx:if="{{isExaminingInfo}}">
			<block class="block-details" wx:for="{{examiningInfo}}" wx:key="index">
				<view class="indexId">{{index+1}}</view>
				<view>资源名称：{{item.name}}</view>
				<view>日期：{{item.date}}</view>
				<view>时间：{{analysisTime.handaltime(item.time)}}</view>
				<view class="cancelBtn" bindtap="cancelTap" data-id="{{item.objectId}}">退订</view>
			</block>
		</view>
	</view>

	<view class="content">
		<view class="header">
			<view bind:tap="$onClickIsShow" data-type="isFailInfo">----------已退订/未通过----------</view>
		</view>
		<view class="details" wx:if="{{isFailInfo}}">
			<block class="block-details" wx:for="{{failInfo}}" wx:key="index">
				<view class="indexId">{{index+1}}</view>
				<view>资源名称：{{item.name}}</view>
				<view>日期：{{item.date}}</view>
				<view>时间：{{analysisTime.handaltime(item.time)}}</view>
				<view>提交时间：{{analysisTime.sliceTime(item.createdAt)}}</view>
			</block>
		</view>
	</view>


	<view class="content">
		<view class="header">
			<view bind:tap="$onClickIsShow" data-type="isCompletedInfo">----------使用完成----------</view>
		</view>
		<view class="details" wx:if="{{isCompletedInfo}}">
			<block class="block-details" wx:for="{{completedInfo}}" wx:key="index">
				<view class="indexId">{{index+1}}</view>
				<view>资源名称：{{item.name}}</view>
				<view>日期：{{item.date}}</view>
				<view>时间：{{analysisTime.handaltime(item.time)}}</view>
				<view>信用积分变化：{{item.markChange}}</view>
			</block>
		</view>
	</view>
</view>