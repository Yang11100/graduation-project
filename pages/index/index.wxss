.selection {
  border-bottom: 2px solid #ddd;
}

.slide-image {
  width: 100%;
}

.header {
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: limegreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.text-part {
  font-size: 14px;
}

.text-all {
  color: green;
  font-size: 15px;
}

.content {
  display: flex;
  /*布局.设为Flex布局以后，子元素的float、clear和vertical-align属性将失效。*/
  flex-direction: row;
  flex-wrap: wrap;
  /*换行*/
  justify-content: center;
}

.content-item {
  height: 250rpx;
  width: 45%;
  margin: 10rpx;
  /*外边距*/
  position: relative;
  /*定位，为了item-text的位置*/

}

.content-item image {
  /*item下面的图片样式*/
  width: 100%;
  height: 100%;

}

.content-item-text {
  position: absolute;
  /*绝对布局*/
  bottom: 0px;
  color: white;
  font-size: 30rpx;
  text-align: center;
  background: -webkit-linear-gradient(bottom, rgba(179, 110, 110, 0.8), rgba(0, 0, 0, 0));
  /*设置渐变黑色*/
  height: 125rpx;
  width: 98%;
  display: flex;
  flex-direction: column;
  /*方向：竖*/
  justify-content: flex-end;
  /*对其方向：底部开始*/
  padding-left: 1%;
  padding-right: 1%;
  padding-bottom: 1%;
}

.list-item {
  height: 400rpx;
  width: 98%;
  flex-direction: row;
  display: flex;
  border-top: 2px solid rgb(172, 128, 128);
  /* margin-bottom: 10rpx; */
}

.list-item-images {
  height: 350rpx;
  width: 50%;
  /* position: relative; */
  margin-top: 15rpx;
  margin-left: 5rpx;
  float: left;
  padding: 0 10rpx;
  border-radius: 5rpx 7rpx;
}

.list-item-images-img {
  height: 100%;
  width: 100%;
  /* float: left; */
}

.list-item-text {
  /* height: 200rpx; */
  width: 46%;
  /* margin-top: 20rpx; */
  padding-left: 2rpx;
  padding-right: 2rpx;
  float: right
}
.list-item-text-title {
  text-align: center;
}
.list-item-text-content {
  color: rgb(61, 30, 30);
  margin: 20rpx;
  font-size: 28rpx;
  margin-bottom: 15rpx;
}