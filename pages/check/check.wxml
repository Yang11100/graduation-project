<wxs src="../../utils/analysis-time.wxs" module="analysisTime"></wxs>
<view class="nav">
  <image class='background' src="/images/check.jpeg" mode="aspectFill"></image>
  <view class="content">
    <view class="header">
      <view bind:tap="$onClickIsShow" data-type="isUntreated">待处理></view> 
    </view>
    <view class="details" wx:if="{{isUntreated}}">
      <block class="block-detail" wx:for="{{ untreated }}" wx:key="index">
        <view class="list">{{ index + 1 }}</view>
        <view class="block-details">
          <view class="detail">用户名称：  {{ item.username }}</view>
          <view class="detail">资源名称：  {{ item.name }}</view>
          <view class="detail">日 期：     {{ item.date }}</view>
          <view class="detail">时 间：     {{ analysisTime.handaltime(item.time) }}</view>
          <view class="detail">申请状态：   {{ analysisTime.handelResults(item.results) }}</view>
          <view>提交时间：{{analysisTime.sliceTime(item.createdAt)}}</view>
        </view>
        <view class="btn" bindtap="auditTap" data-id="{{item.objectId}}" data-jump="{{true}}">去处理</view>
      </block>
    </view>
  </view>
  <view class="content">
    <view class="header">
      <view bind:tap="$onClickIsShow" data-type="isNoteValuatedInfo">待评价</view>
    </view>
    <view class="details" wx:if="{{isNoteValuatedInfo}}">
      <block class="block-detail" wx:for="{{noteValuatedInfo}}" wx:key="index">
        <view class="list">{{ index + 1 }}</view>
        <view class="block-details">
          <view class="detail">用户名称：  {{ item.username }}</view>
          <view class="detail">资源名称：  {{ item.name }}</view>
          <view class="detail">日 期：     {{ item.date }}</view>
          <view class="detail">时 间：     {{ analysisTime.handaltime(item.time) }}</view>
          <view class="detail">申请状态：{{ analysisTime.handelResults(item.results) }}</view>
          <view>提交时间：{{analysisTime.sliceTime(item.createdAt)}}</view>
        </view>
        <view class="btn" bindtap="estimateTap" data-id="{{item.objectId}}">去评价</view>
      </block>
    </view>
  </view>
  <view class="content">
    <view class="header">
      <view bind:tap="$onClickIsShow" data-type="isAllInfo">已完成</view>
    </view>
    <view class="details" wx:if="{{isAllInfo}}">
      <block class="block-detail" wx:for="{{allInfo}}" wx:key="index">
        <view class="list">{{ index + 1 }}</view>
        <view class="block-details">
        <view class="detail">用户名称：  {{ item.username }}</view>
        <view class="detail">资源名称：  {{ item.name }}</view>
        <view class="detail">日期：      {{ item.date }}</view>
        <view class="detail">时间：      {{ analysisTime.handaltime(item.time) }}</view>
        <view class="detail">申请状态：  {{ analysisTime.handelResults(item.results) }}</view>
        <view>提交时间：{{analysisTime.sliceTime(item.createdAt)}}</view>
      </view>
      </block>
    </view>
  </view>
</view>