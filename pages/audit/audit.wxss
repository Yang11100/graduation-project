.nav {
    height: 100%;
    width: 100%;
}

.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -1;
}

.msg {
    font-size: 32rpx;
}

.msgmsg {
    width: 100%;
    padding-top: 15rpx;
    display: flex;
    flex-direction: row;
}

.title {
    margin-left: 3%;
    margin-top: 80rpx;
    width: 24%;
    color: rgb(204, 23, 23);
    text-align: center;
    font-size: 35rpx;
    float: left;
}

.msgInfo {
    width: 70%;
    float: right;
    padding-top: 20rpx;
}

.specialMsg {
    width: 35%;
    text-align: right;
}

.sprcial {
    text-align: left;
    width: 60%;
    float: right;
}

.buttonstyle {
    width: 90%;
    display: flex;
    clear: both;
    padding-top: 15rpx;
    padding-right: 20rpx;
    margin-left: 5%;
}

.agree,
.disagree {
    font-size: 38rpx;
    text-align: center;
    border: rgb(45, 82, 44) solid 1px;
    border-radius: 20px;
    width: 40%;
    padding: 4rpx;
    margin-top: 30rpx;
}